    <script>
        // –ñ–∞—É–∞–ø—Ç—ã —Ç–µ–∫—Å–µ—Ä—É
        function checkAnswer(element, selectedOption) {
            const correctAnswer = 'C';
            const options = document.querySelectorAll('.option');
            
            options.forEach(opt => {
                opt.classList.remove('correct', 'wrong');
                if(opt.getAttribute('data-option') === correctAnswer) {
                    opt.classList.add('correct');
                }
            });
            
            if(selectedOption === correctAnswer) {
                element.classList.add('correct');
                setTimeout(() => {
                    showInvitation();
                }, 1000);
            } else {
                element.classList.add('wrong');
            }
        }
        
        // –®–∞“õ—ã—Ä—É–¥—ã –∫”©—Ä—Å–µ—Ç—É
        function showInvitation() {
            document.getElementById('initialView').classList.add('hidden');
            document.getElementById('invitationContent').classList.remove('hidden');
        }
        
        // –¢–µ—Å—Ç—Ç—ñ –±–∞—Å—Ç–∞—É
        function startChallenge() {
            document.getElementById('initialView').querySelector('p:nth-of-type(3)').style.display = 'none';
            document.getElementById('challenge').classList.remove('hidden');
        }
        
        // –ë”©–ª—ñ—Å—É —Ñ—É–Ω–∫—Ü–∏—è—Å—ã
        function shareInvitation() {
            if(navigator.share) {
                navigator.share({
                    title: '–ñ“±–ø—Ç—ã“õ –∂“±–º—ã—Å –ø—Ä–µ–∑–µ–Ω—Ç–∞—Ü–∏—è—Å—ã–Ω–∞ —à–∞“õ—ã—Ä—É',
                    text: '“ö“±—Ä–º–µ—Ç—Ç—ñ –ê–Ω—ç–ª—å –∞–ø–∞–π, –±—ñ–∑ —Å—ñ–∑–¥—ñ –∂“±–ø—Ç—ã“õ –∂“±–º—ã—Å—ã–º—ã–∑–¥—ã“£ “õ–æ—Ä—ã—Ç—ã–Ω–¥—ã—Å—ã–Ω –∫”©—Ä—Å–µ—Ç—É–≥–µ —à–∞“õ—ã—Ä–∞–º—ã–∑!',
                    url: window.location.href
                }).catch(err => {
                    console.log('–ë”©–ª—ñ—Å—É —Å”ô—Ç—Å—ñ–∑ –∞—è“õ—Ç–∞–ª–¥—ã:', err);
                });
            } else {
                alert('–°—ñ–ª—Ç–µ–º–µ–Ω—ñ “õ–æ–ª–º–µ–Ω –∫”©—à—ñ—Ä—ñ–ø –∞–ª—ã“£—ã–∑:\n' + window.location.href);
                
            }
        }
    </script>
